<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            app:cardBackgroundColor="@android:color/white">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/row_prev_exhibtion_img"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="@dimen/_104sdp"
                    android:scaleType="fitXY"
                    />
                <TextView
                    android:id="@+id/row_prev_exhibtion_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#2998d6"
                    android:text="titleeeeeeeeee"
                    android:textSize="@dimen/_10sdp"
                    android:layout_below="@id/row_prev_exhibtion_img"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_marginEnd="@dimen/_6sdp"
                    android:layout_marginTop="@dimen/_2sdp"

                    />
                <TextView
                    android:id="@+id/row_prev_exhibtion_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#cccbcb"
                    android:text="desccccccccccccc"
                    android:textSize="@dimen/_10sdp"
                    android:layout_below="@+id/row_prev_exhibtion_title"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_marginEnd="@dimen/_6sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginBottom="@dimen/_6sdp"
                    android:layout_alignParentStart="true"
                    />
                <TextView
                    android:id="@+id/row_prev_exhibtion_end_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ec4176"
                    android:text="desccccccccccccc"
                    android:textSize="@dimen/_10sdp"
                    android:layout_below="@+id/row_prev_exhibtion_desc"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_marginEnd="@dimen/_6sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginBottom="@dimen/_6sdp"
                    android:layout_alignParentStart="true"
                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>


</RelativeLayout>