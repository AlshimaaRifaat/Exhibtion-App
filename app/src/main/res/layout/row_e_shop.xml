<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_width="@dimen/_145sdp"
            android:layout_height="@dimen/_154sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            app:cardBackgroundColor="@android:color/white">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/row_e_shop_img"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_88sdp"
                    android:scaleType="fitXY"
                    />
                <TextView
                    android:id="@+id/row_e_shop_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#2998d6"
                    android:textSize="@dimen/_10sdp"
                    android:layout_below="@id/row_e_shop_img"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:maxLines="2"

                    />
              <TextView
                    android:id="@+id/row_e_shop_sale_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#cccbcb"
                    android:textSize="@dimen/_10sdp"
                    android:layout_below="@+id/row_e_shop_title"

                  android:layout_marginBottom="@dimen/_5sdp"
                  android:layout_marginStart="@dimen/_6sdp"
                  android:layout_marginEnd="@dimen/_6sdp"

                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>




</RelativeLayout>